<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="20dp"
    card_view:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="@color/yellow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/light_black">
        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Subject"
            android:textColor="@color/white"
            android:background="@color/black"
            android:textSize="@dimen/ListHeaderFontSize"
            android:textStyle="bold"
            android:padding="10dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/homework_list_submissiondate"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="Click below to view"
            android:textColor="@color/white"
            android:background="@color/light_black"
            android:textSize="@dimen/ListHeaderFontSize"
            android:textStyle="bold"
            android:padding="10dp"
            android:textAlignment="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:minHeight="80dp">
        <TextView
            android:id="@+id/homework_list_subjectName"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Social Science Social Science"
            android:textColor="@color/light_black"
            android:background="@color/yellow_light"
            android:textSize="@dimen/ListItemFontSize"
            android:textStyle="bold"
            android:padding="10dp"
            android:gravity="center"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/homework_list_btnView"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="View"
                android:textAllCaps="false"
                android:layout_gravity="center|center_vertical"
                android:textColor="@color/white"
                android:textSize="@dimen/ButtonFontSize"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_button_red"/>

            <Button
                android:visibility="gone"
                android:id="@+id/homework_list_btnCreate"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="Create"
                android:textAllCaps="false"
                android:layout_gravity="center|center_vertical"
                android:textColor="@color/white"
                android:textSize="@dimen/ButtonFontSize"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_button_red"/>

        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>